<?xml version='1.0' encoding='utf-8'?>
<widget id="com.appspot.prayingback" version="1.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Legatus Christi: Terço Orações </name>
    <description>
       Legatus Christi é um aplicativo para incentivar a oração diária extremamente importante na vida de um cristão.
    </description>
    <author email="legatus.christi@gmail.com" href="http://prayingback.appspot.com/">
        Legatus Christi
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
		<icon src="res/icon.png" />
        <allow-intent href="market:*" />		
		<!-- you can use any density that exists in the Android project -->
		<splash src="splash.png" density="land-hdpi"/>
		<splash src="splash.png" density="land-ldpi"/>
		<splash src="splash.png" density="land-mdpi"/>
		<splash src="splash.png" density="land-xhdpi"/>

		<splash src="splash.png" density="port-hdpi"/>
		<splash src="splash.png" density="port-ldpi"/>
		<splash src="splash.png" density="port-mdpi"/>
		<splash src="splash.png" density="port-xhdpi"/>
			
		
	</platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
